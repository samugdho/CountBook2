<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbg"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.sadman.countbook.EditCounter"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/counter_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Create Date"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_red_light"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="36dp" />

            <TextView
                android:id="@+id/counter_date_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Last Update"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="36dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/counter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/counter_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Current Value: "
                android:textColor="?android:attr/textColorHighlight"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="165dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/counter_current_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="###"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/counter_button_reset"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:elevation="0dp"
                    android:text="Reset"
                    android:textColor="@android:color/background_light"
                    tools:layout_editor_absoluteX="276dp"
                    tools:layout_editor_absoluteY="226dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="Initial Value: "
                    android:textAlignment="viewStart"
                    android:textColor="?android:attr/textColorHighlight" />

                <TextView
                    android:id="@+id/counter_init_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:fontFamily="monospace"
                    android:text="###"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="146dp"
                    tools:layout_editor_absoluteY="310dp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@color/colorAccent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/counter_button_minus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:text="-1"
                    android:textColor="@color/colorAccent"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="455dp" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorAccent" />

                <Button
                    android:id="@+id/counter_button_plus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    android:text="+1"
                    android:textColor="@color/colorAccent"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="455dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/counter_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="serif-monospace"
                android:hint="Here\n     Be\n        Ye\n           Comment"
                android:minHeight="138dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/holo_red_light"
                android:textColorHint="?android:attr/textColorHighlightInverse"
                android:textSize="30sp" />

            <Button
                android:id="@+id/counter_button_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:elevation="0dp"
                android:text="Delete"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="455dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
